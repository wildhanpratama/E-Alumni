<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_admin"/>
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_admin"
        android:id="@+id/nama_depan"/>
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama_depan"
        android:id="@+id/nama_belakang"/>
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama_belakang"
        android:id="@+id/alamat"/>
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alamat"
        android:id="@+id/email"/>
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:id="@+id/no_telepon"/>
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_telepon"
        android:id="@+id/hak_akses"/>
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hak_akses"
        android:id="@+id/id_sekolah"/>
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_sekolah"
        android:id="@+id/status_pekerjaan"/>
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_pekerjaan"
        android:id="@+id/foto"/>
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foto"
        android:id="@+id/username"/>
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:id="@+id/password"/>



	<Button
        android:layout_below="@+id/foto_logo_bank"
        android:layout_width="wrap_content"
		android:layout_height="45dp"
		android:backgroundTint="@color/color_edit"
		android:textColor="#ffff"
        android:text="Edit"
		android:drawableLeft="@drawable/edit_putih"
        android:id="@+id/tombol_edit" />

    <Button
        android:layout_width="wrap_content"
		android:layout_height="45dp"
		android:backgroundTint="@color/color_hapus"
		android:textColor="#ffff"
        android:text="Hapus"
        android:layout_below="@+id/foto_logo_bank"
        android:layout_toRightOf="@+id/tombol_edit"
		android:drawableLeft="@drawable/delete_putih"
        android:id="@+id/tombol_hapus" />

</RelativeLayout>
