<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/background_input"
                                                   tools:context=".data_karyawan.data_karyawan_edit">

    <LinearLayout
        android:id="@+id/judul_Scrool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp">

		
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:textColor="@color/putih"
            android:text="EDIT"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:textColor="@color/putih"
            android:text="Silahkan Edit Data Dibawah ini"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_columnWeight="1"
        android:focusable="true"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ScrollView


                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

        
		
		
                            <com.google.android.material.textfield.TextInputLayout
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:id="@+id/layout_id_karyawan"
                                android:layout_height="wrap_content">
                
                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:id="@+id/id_karyawan"
                                    android:layout_height="wrap_content"
                                    android:hint="Id Karyawan " />
                            </com.google.android.material.textfield.TextInputLayout>
		

		<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
				android:layout_below="@+id/layout_id_karyawan"
                android:id="@+id/layout_nama_depan"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/nama_depan"
                    android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_email"
                    android:hint="Nama Depan " />
			</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
				android:layout_below="@+id/layout_nama_depan"
                android:id="@+id/layout_nama_belakang"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/nama_belakang"
                    android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_email"
                    android:hint="Nama Belakang " />
			</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
				android:layout_below="@+id/layout_nama_belakang"
                android:id="@+id/layout_alamat"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/alamat"
                    android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_email"
                    android:hint="Alamat " />
			</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
				android:layout_below="@+id/layout_alamat"
                android:id="@+id/layout_email"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/email"
                    android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_email"
                    android:hint="Email " />
			</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
				android:layout_below="@+id/layout_email"
                android:id="@+id/layout_no_telepon"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/no_telepon"
                    android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_email"
                    android:hint="No Telepon " />
			</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
				android:layout_below="@+id/layout_no_telepon"
                android:id="@+id/layout_kategori"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/kategori"
                    android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_email"
                    android:hint="Kategori " />
			</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
				android:layout_below="@+id/layout_kategori"
                android:id="@+id/layout_kota"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/kota"
                    android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_email"
                    android:hint="Kota " />
			</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
				android:layout_below="@+id/layout_kota"
                android:id="@+id/layout_tahun_masuk"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/tahun_masuk"
                    android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_email"
                    android:hint="Tahun Masuk " />
			</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
				android:layout_below="@+id/layout_tahun_masuk"
                android:id="@+id/layout_tahun_keluar"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/tahun_keluar"
                    android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_email"
                    android:hint="Tahun Keluar " />
			</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
				android:layout_below="@+id/layout_tahun_keluar"
                android:id="@+id/layout_bidang_keahlian"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/bidang_keahlian"
                    android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_email"
                    android:hint="Bidang Keahlian " />
			</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
				android:layout_below="@+id/layout_bidang_keahlian"
                android:id="@+id/layout_id_sekolah"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/id_sekolah"
                    android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_email"
                    android:hint="Id Sekolah " />
			</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
				android:layout_below="@+id/layout_id_sekolah"
                android:id="@+id/layout_linkedin"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/linkedin"
                    android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_email"
                    android:hint="Linkedin " />
			</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
				android:layout_below="@+id/layout_linkedin"
                android:id="@+id/layout_instagram"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/instagram"
                    android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_email"
                    android:hint="Instagram " />
			</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
				android:layout_below="@+id/layout_instagram"
                android:id="@+id/layout_facebook"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/facebook"
                    android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_email"
                    android:hint="Facebook " />
			</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
				android:layout_below="@+id/layout_facebook"
                android:id="@+id/layout_foto"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/foto"
                    android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_email"
                    android:hint="Foto " />
			</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
				android:layout_below="@+id/layout_foto"
                android:id="@+id/layout_username"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/username"
                    android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_email"
                    android:hint="Username " />
			</com.google.android.material.textfield.TextInputLayout>
		<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
				android:layout_below="@+id/layout_username"
                android:id="@+id/layout_password"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/password"
                    android:layout_height="wrap_content"
					android:drawableLeft="@drawable/icon_email"
                    android:hint="Password " />
			</com.google.android.material.textfield.TextInputLayout>

    
                            <Button
                                android:id="@+id/tombol_update"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:backgroundTint="@color/color_detail"
                                android:drawableLeft="@drawable/simpan_putih"
                                android:text="      UPDATE     "
                                android:textColor="#ffff">
                            </Button>
					

                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
