<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_kenangan"/>
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_kenangan"
        android:id="@+id/caption"/>
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caption"
        android:id="@+id/tanggal"/>
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tanggal"
        android:id="@+id/foto"/>
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foto"
        android:id="@+id/id_alumni"/>
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_alumni"
        android:id="@+id/jumlah_like"/>
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jumlah_like"
        android:id="@+id/jumlah_komen"/>



	<Button
        android:layout_below="@+id/foto_logo_bank"
        android:layout_width="wrap_content"
		android:layout_height="45dp"
		android:backgroundTint="@color/color_edit"
		android:textColor="#ffff"
        android:text="Edit"
		android:drawableLeft="@drawable/edit_putih"
        android:id="@+id/tombol_edit" />

    <Button
        android:layout_width="wrap_content"
		android:layout_height="45dp"
		android:backgroundTint="@color/color_hapus"
		android:textColor="#ffff"
        android:text="Hapus"
        android:layout_below="@+id/foto_logo_bank"
        android:layout_toRightOf="@+id/tombol_edit"
		android:drawableLeft="@drawable/delete_putih"
        android:id="@+id/tombol_hapus" />

</RelativeLayout>
