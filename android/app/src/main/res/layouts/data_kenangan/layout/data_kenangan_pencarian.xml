<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="PENCARIAN"
                android:textAlignment="center"
				android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cari Berdasarkan : " />

            <Spinner
                android:id="@+id/spinnerPencarian"
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:layout_height="47dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pencarian :" />

            <EditText
                android:id="@+id/editPencarian"
                android:layout_width="match_parent"

                android:background="@color/grey"
                android:layout_height="47dp"
                android:hint="Cari" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
		android:id="@+id/filter_tanggal"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="FILTER TANGGAL"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="20dp"
				android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dari Tanggal :" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@color/grey"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_datepicker"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/gradient_toolbar"
                    android:drawableLeft="@drawable/tanggal_putih"
                    android:text="   Pilih Tanggal   "
                    android:textColor="#ffff" />

                <TextView
                    android:id="@+id/tv_dateresult"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="20dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sampai Tanggal :" />


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@color/grey"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_datepicker1"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:background="@drawable/gradient_toolbar"
                android:drawableLeft="@drawable/tanggal_putih"
                android:text="   Pilih Tanggal   "
                android:layout_marginRight="10dp"
                android:textColor="#ffff" />

                <TextView
                    android:id="@+id/tv_dateresult1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="20dp" />

        </LinearLayout>





        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
