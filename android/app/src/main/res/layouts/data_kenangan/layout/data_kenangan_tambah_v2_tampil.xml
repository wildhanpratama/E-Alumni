<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

 

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <Button
            android:id="@+id/tombol_hapus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/tombol_edit"
            android:backgroundTint="@color/colorAccent"
            android:drawableRight="@drawable/delete_putih"
            android:textColor="#ffff" />

        <TextView
            android:visibility="gone"
            android:id="@+id/id_kenangan"
            android:background="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="isi"
        />
					
				<TextView
					android:id="@+id/caption"
					android:background="#ffff"
					android:layout_marginLeft="3dp"
					android:width="100dp"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="isi"/>
				<TextView
					android:id="@+id/tanggal"
					android:background="#ffff"
					android:layout_marginLeft="3dp"
					android:width="100dp"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="isi"/>
				<TextView
					android:id="@+id/foto"
					android:background="#ffff"
					android:layout_marginLeft="3dp"
					android:width="100dp"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="isi"/>
				<TextView
					android:id="@+id/id_alumni"
					android:background="#ffff"
					android:layout_marginLeft="3dp"
					android:width="100dp"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="isi"/>
				<TextView
					android:id="@+id/jumlah_like"
					android:background="#ffff"
					android:layout_marginLeft="3dp"
					android:width="100dp"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="isi"/>
				<TextView
					android:id="@+id/jumlah_komen"
					android:background="#ffff"
					android:layout_marginLeft="3dp"
					android:width="100dp"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="isi"/>


			
    </TableRow>


</RelativeLayout>


